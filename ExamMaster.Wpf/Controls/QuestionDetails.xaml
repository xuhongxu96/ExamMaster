<UserControl x:Class="ExamMaster.Wpf.Controls.QuestionDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamMaster.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox Header="错误列表">
            <ListView DataContext="{Binding Model, RelativeSource={RelativeSource AncestorType={x:Type local:QuestionDetails}}}" ItemsSource="{Binding ExceptionMessages}" />
        </GroupBox>
    </Grid>
</UserControl>
